<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
} %>
    
<!-- Message Block -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<p>All fields are required.</p>
<form action="/account/register" method="post">
    <label class="lbl-properties">First Name:
        <input type="text" id="fname" name="account_firstname" placeholder="First Name" required value="<%= locals.account_firstname %>"> 
    </label>
    <label class="lbl-properties">Last Name:
        <input type="text" id="lname" name="account_lastname" placeholder="Last Name" required value="<%= locals.account_lastname %>">
    </label>
    <label class="lbl-properties">Email address:
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
    </label>
    <label class="lbl-properties">Password:
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>        
    </label>
    <div class="password-requirement"><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</i></div>
    <div id="pswdBtn"><span>Show Password</span></div>

    <div class="form-row">   
        <input type="submit" name="submit" id="regbtn" class="btn-submit" value="Register">
    </div>
</form>
<script src="../../js/script.js"></script>