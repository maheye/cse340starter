<!-- Login Content -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
} %>

<%- messages() %>


<form action="/account/login" method="post">
    <label class="lbl-properties">Email:
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
    </label>
    <label class="lbl-properties">Password:
        <input type="password" id="password" name="account_password" placeholder="Enter a valid password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    </label>
    <div class="password-requirement"><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</i></div>
    <div id="pswdBtn"><span>Show Password</span></div>
    <div class="form-row">
        <input type="submit" name="submit" id="regbtn" class="btn-submit" value="Login">
    </div>
    <p>No Account? <a href="/account/register">Sign-Up</a></p>
</form>
<script src="../../js/script.js"></script>